        <div class="collapse navbar-collapse bg-transparent" id="navbarCollapse">
            <div class="navbar-nav ms-auto">
              <% unless logged_in?%>
                <%= link_to "ログイン", user_sessions_login_path, class: "nav-item nav-link active" %>
