<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-10 offset-lg-1 text-center mt-3">
      <% if logged_in? && @user.id == current_user.id %>
        <h3><%= "ユーザーページ" %></h3>
        <div class="row justify-content-center">
          <div class="card col-lg-6 px-0">
            <ul class="list-group list-group-flush">
              <li class="list-group-item">
                <%= "ユーザー名:#{current_user.name}" %>
              </li>
              <li class="list-group-item">
                <%= link_to 'ユーザー名を編集する',  edit_user_path(current_user) %>
              </li>
            </ul>
          </div>
        </div>
        <h4 class="mt-3"><%= "これまで使用した歯ブラシ"%></h4>
      <% else %>
        <h3 class="mb-5"><%= "#{@user.name}さんのページ" %></h3>
        <h4><%= "これまでに使用された歯ブラシ"%></h4>
      <% end %>
    </div>
    <% @user.toothbrushes.each do |toothbrush| %>
      <div class="col-sm-12 col-lg-2 mb-3">
        <div class="card">
          <div class="text-center">
            <%= image_tag toothbrush.item_image_urls, size: '128x128' if toothbrush.item_image_urls.present? %>
          </div>
          <div class="card-body" id="index-card">
            <p class="card-title">
              <%= toothbrush.item_name %>
            </p>
            <ul class="list-group">
              <li class="list-group-item text-center">
                <%= link_to 'この歯ブラシの情報を確認する',  toothbrush_path(toothbrush) %>
              </li>
              <li class="list-group-item text-center">
                <%= "使用状況:#{toothbrush.state_i18n}" %>
              </li>
              <% if toothbrush.end_use_at %>
              <li class="list-group-item text-center">
                <%= "使用終了日: #{toothbrush.end_use_at.strftime('%Y-%m-%d')}" %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>